// Prisma Schema 示例
// 复制为 schema.prisma 并根据你的数据库结构调整

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 知识库模型（用于 RAG）
model Knowledge {
  id        Int      @id @default(autoincrement())
  title     String?
  content   String   @db.Text
  category  String?
  tags      String[] // PostgreSQL 数组类型
  published Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([content])
  @@index([category])
  @@map("knowledge")
}

// 用户模型示例
model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  bio       String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

// 文章模型示例
model Article {
  id        Int      @id @default(autoincrement())
  title     String
  content   String   @db.Text
  authorId  Int?
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([title, content])
  @@map("articles")
}
